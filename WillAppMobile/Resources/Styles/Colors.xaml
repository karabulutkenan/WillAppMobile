<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary renkler -->
    <Color x:Key="Primary">#6200EE</Color>
    <Color x:Key="PrimaryVariant">#3700B3</Color>
    <Color x:Key="Secondary">#03DAC6</Color>
    <Color x:Key="SecondaryVariant">#018786</Color>

    <!-- Giriş ve Kayıt Ol buton renkleri -->
    <Color x:Key="ButtonBackground">#000000</Color>
    <Color x:Key="ButtonTextColor">#FFFFFF</Color>
    <Color x:Key="ForgotPasswordText">#0000FF</Color>

    <!-- Diğer renkler -->
    <Color x:Key="Gray200">#eeeeee</Color>
    <Color x:Key="Gray300">#e0e0e0</Color>
    <Color x:Key="Gray400">#bdbdbd</Color>
    <Color x:Key="Gray500">#9e9e9e</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray700">#616161</Color>
    <Color x:Key="Gray800">#424242</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#121212</Color>

    <!-- Beyaz ve Siyah -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

</ResourceDictionary>
