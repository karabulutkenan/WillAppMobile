<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WillAppMobile.SignupPage">

    <VerticalStackLayout Spacing="25" Padding="30">
        <Label Text="Üyelik Formu" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="tcEntry" Placeholder="TC Kimlik Numarası" Keyboard="Numeric" />
        <Entry x:Name="nameEntry" Placeholder="Ad" />
        <Entry x:Name="surnameEntry" Placeholder="Soyad" />
        <Entry x:Name="emailEntry" Placeholder="E-posta" Keyboard="Email" />
        <Entry x:Name="phoneEntry" Placeholder="Telefon Numarası" Keyboard="Telephone" />
        <Entry x:Name="passwordEntry" Placeholder="Şifre" IsPassword="True" />
        <Entry x:Name="confirmPasswordEntry" Placeholder="Şifreyi Onayla" IsPassword="True" />

        <Button Text="Üyelik Oluştur" Clicked="OnSignupClicked" />
    </VerticalStackLayout>
</ContentPage>
