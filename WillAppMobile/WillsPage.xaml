<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WillAppMobile.WillsPage"
             BackgroundColor="{StaticResource White}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Ekle" Clicked="OnAddNewWillClicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding Wills}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" Orientation="Vertical" BackgroundColor="LightGray" Margin="5">
                        <Label Text="{Binding Title}" FontSize="20" />
                        <Label Text="{Binding Summary}" FontSize="14" TextColor="Gray" />
                        <Button Text="DÃ¼zenle" Clicked="OnEditWillClicked" CommandParameter="{Binding .}" />
                        <Button Text="Sil" Clicked="OnDeleteWillClicked" CommandParameter="{Binding .}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>
