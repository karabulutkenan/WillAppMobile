<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WillAppMobile.AddWillPage"
             Title="Vasiyet Ekle">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            <Entry x:Name="titleEntry" Placeholder="Vasiyet Başlığı"/>
            <Entry x:Name="summaryEntry" Placeholder="Vasiyet Özeti"/>
            <Editor x:Name="detailsEditor" Placeholder="Vasiyet Detayları" HeightRequest="200"/>
            <Picker x:Name="executorPicker" Title="Vasi Seç">
                <Picker.Items>
                    <x:String>Yeni Vasi Ekle</x:String>
                </Picker.Items>
            </Picker>
            <StackLayout x:Name="newExecutorDetails" IsVisible="False">
                <Entry x:Name="executorFirstNameEntry" Placeholder="Vasi Adı"/>
                <Entry x:Name="executorLastNameEntry" Placeholder="Vasi Soyadı"/>
                <Entry x:Name="executorEmailEntry" Placeholder="Vasi E-posta"/>
            </StackLayout>
            <Button Text="Dosya Ekle" Clicked="OnUploadFileClicked"/>
            <Button Text="Vasiyeti Kaydet" Clicked="SaveWillClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
