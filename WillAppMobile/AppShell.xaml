<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:WillAppMobile"
       x:Class="WillAppMobile.AppShell">

    <!-- Flyout menu -->
    <FlyoutItem Title="Ana Sayfa">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Vasiyetlerim">
        <ShellContent ContentTemplate="{DataTemplate local:WillsPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Mezar Taşım">
        <ShellContent ContentTemplate="{DataTemplate local:TombStonePage}" />
    </FlyoutItem>
    <FlyoutItem Title="Ayarlar">
        <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
    </FlyoutItem>

    <!-- Çıkış butonu -->
    <FlyoutItem Title="Çıkış">
        <ShellContent>
            <local:LoginPage />
        </ShellContent>
    </FlyoutItem>
</Shell>
